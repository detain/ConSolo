{% extends "shared/emubase.twig" %}

{% block content %}
<table id="datatable" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Type</th>
            <th>Provides</th>
            <th>Description</th>
            <th>Last Updated</th>
            <th>Update Trigger</th>
            <th>Links</th>
        </tr>
    </thead>
    <tbody>
        {% for data in results %}
        <tr>
            <td><a href="{{ app.request.basePath }}/source/{{ data.id }}">{{ data.id }}</a></td>
            <td><a href="{{ app.request.basePath }}/source/{{ data.id }}">{{ data.name }}</a></td>
            <td>{{ data.type }}</td>
            <td>
                {% for type in data.provides %}
                <span class="badge badge-primary">{{ type }}</span>
                {% endfor %}
            </td>
            <td>{{ data.description }}</td>
            <td>{{ data.updatedLast }}</td>
            <td>{{ data.updateTrigger }}</td>
            <td>
                {% for url, text in data.web %}
                <a href="{{ url }}">{{ text }}</a>
                {% endfor %}
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
<script>
$(document).ready(function () {
    $('#datatable').DataTable({
        paging: false
    });
});
</script>
{% endblock %}
