{% extends "shared/emubase.twig" %}

{% block content %}
<table id="datatable" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Name</th>
            <th>Logo</th>
            <th>Screenshot</th>
            <th style="min-width: 40%;">Description</th>
            <th>Platforms</th>
            <th>Links</th>
            <th>Version</th>
            <th>Last Updated</th>
        </tr>
    </thead>
    <tbody>
        {% for data in results %}
        <tr>
            <td><a href="{{ app.request.basePath }}/emulator/{{ data.id }}">{{ data.name }}</a></td>
            <td>{% if data.logo is defined %}<img src="{{ data.logo }}" alt="logo" style="max-width: 200px;max-height: 100px;">{% endif %}</td>
            <td>{% if data.screenshot is defined %}<img src="{{ data.screenshot }}" alt="screenshot" style="max-width: 200px;max-height: 100px;">{% endif %}</td>
            <td style="min-width: 40%;">{{ data.description }}</td>
            <td>
                {% for platform in data.platforms %}
                <a href="/platform/{{ platform }}"><span class="label label-primary">{{ platform }}</span></a>
                {% endfor %}
            </td>
            <td>
                {% for url, text in data.web %}
                <a href="{{ url }}">{{ text }}</a>
                {% endfor %}
            </td>
            {% if data.versions is defined %}
            {% set keys = data.versions|keys %}
            <td>{{ keys[0] }}</td>
            <td>{{ data.versions[keys[0]].date }}</td>
            {% else %}
            <td></td>
            <td></td>
            {% endif %}
        </tr>
        {% endfor %}
    </tbody>
</table>
<script>
$(document).ready(function () {
    $('#datatable').DataTable({
        paging: false
    });
});
</script>
{% endblock %}
