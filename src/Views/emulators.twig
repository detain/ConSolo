{% extends "shared/emubase.twig" %}

{% block content %}
<div class="row">
	{% for data in results %}
	<div class="col-sm-3 col-md-3">
		<div class="thumbnail">
			<a href="{{ app.request.basePath }}/emulator/{{ data.id }}">
				<div class="caption">
					<h3 style="">{{ data.name }}</h3>
					<p>{{ data.description }}</p>
                    {% for platform in data.platforms %}
                    <span class="badge badge-primary">{{ platform }}</span>
                    {% endfor %}
				</div>
			</a>
		</div>
	</div>
	{% endfor %}
</div>
{% endblock %}
