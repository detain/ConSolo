{% extends "shared/emubase.twig" %}

{% block content %}
<table class="table table-striped table-bordered" style="width:100%">
<tbody>
    <tr>
        <th>ID</a></td>
        <td>{{ data.id }}</td>
    </tr>
    <tr>
        <th>Short Name</a></td>
        <td>{{ data.shortName }}</td>
    </tr>
    <tr>
        <th>Name</a></td>
        <td>{{ data.name }}</td>
    </tr>
    <tr>
        <th>Company</a></td>
        <td><a href="/company/{{ data.company }}">{{ data.company }}</a></td>
    </tr>
    <tr>
        <th>Description</a></td>
        <td>{{ data.description }}</td>
    </tr>
{% if data.date is defined %}
    <tr>
        <th>Date Available</td>
        <td>{{ data.date }}</td>
    </tr>
{% endif %}
{% if data.type is defined %}
    <tr>
        <th>Type</td>
        <td>{{ data.type }}</td>
    </tr>
{% endif %}
{% if data.romtype is defined %}
    <tr>
        <th>ROM Type</td>
        <td>{{ data.romtype }}</td>
    </tr>
{% endif %}
{% if data.supporttype is defined %}
    <tr>
        <th>Support Type</td>
        <td>{{ data.supporttype }}</td>
    </tr>
{% endif %}
    <tr>
        <th>Emulators</a></td>
        <td>
            {% for emulator in data.emulators %}
            <a href="/emulator/{{ emulator }}"><span class="label label-primary">{{ emulator }}</span></a><br>
            {% endfor %}
        </td>
    </tr>

    <tr>
        <th>Alternate Names</a></td>
        <td>
            {% for name in data.altNames %}
            <span class="label label-primary">{{ name }}</span><br>
            {% endfor %}
        </td>
    </tr>
{% if data.photo is defined %}
    <tr>
        <th>photo</td>
        <td><img src="{{ data.photo }}" alt="photo" style="max-width: 300px;max-height: 200px;"></td>
    </tr>
{% endif %}
{% if data.wheel is defined %}
    <tr>
        <th>wheel</td>
        <td><img src="{{ data.wheel }}" alt="wheel" style="max-width: 300px;max-height: 200px;"></td>
    </tr>
{% endif %}
{% if data["logo-monochrome"] is defined %}
    <tr>
        <th>logo-monochrome</td>
        <td><img src="{{ data["logo-monochrome"] }}" alt="logo-monochrome" style="max-width: 300px;max-height: 200px;"></td>
    </tr>
{% endif %}
{% if data.illustration is defined %}
    <tr>
        <th>illustration</td>
        <td><img src="{{ data.illustration }}" alt="illustration" style="max-width: 300px;max-height: 200px;"></td>
    </tr>
{% endif %}
{% if data.controller is defined %}
    <tr>
        <th>controller</td>
        <td><img src="{{ data.controller }}" alt="controller" style="max-width: 300px;max-height: 200px;"></td>
    </tr>
{% endif %}
{% if data.icon is defined %}
    <tr>
        <th>icon</td>
        <td><img src="{{ data.icon }}" alt="icon" style="max-width: 300px;max-height: 200px;"></td>
    </tr>
{% endif %}
    <tr>
        <th>Links</a></td>
        <td>
            {% for url, text in data.web %}
            <a href="{{ url }}">{{ text }}</a><br>
            {% endfor %}
        </td>
    </tr>
    <tr>
        <th>Matches</a></td>
        <td>
            {% for source, values in data.matches %}
            {% for match in values %}
            <span class="label label-primary">{{ source }}</span> <span class="label label-info">{{ match }}</span><br>
            {% endfor %}
            {% endfor %}
        </td>
    </tr>
<!-- ext extensions -->
{% if data.ext is defined %}
    <tr>
        <th>Extensions</a></td>
        <td>
            {% for ext in data.ext %}
            <span class="label label-info">.{{ ext }}</span>
            {% endfor %}
        </td>
    </tr>
{% endif %}
</tbody>
</table>
{% if matches|length > 0 %}
<table class="table table-striped table-bordered" style="width:100%">
<tbody>
    {% for source, values in matches %}
    {% for matchId, match in values %}
    <tr>
        <th>{{ source }}</th>
        <th>{{ matchId }}</th>
        <td><pre>{{ match }}</pre></td>
    </tr>
    {% endfor %}
    {% endfor %}
</tbody>
</table>
{% endif %}
{% endblock %}
