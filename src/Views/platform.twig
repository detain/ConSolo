{% extends "shared/emubase.twig" %}

{% block content %}
<table class="table table-striped table-bordered" style="width:100%">
<tbody>
    <tr>
        <th>ID</a></td>
        <td>{{ data.id }}</td>
    </tr>
    <tr>
        <th>Short Name</a></td>
        <td>{{ data.shortName }}</td>
    </tr>
    <tr>
        <th>Name</a></td>
        <td>{{ data.name }}</td>
    </tr>
    <tr>
        <th>Company</a></td>
        <td><a href="/company/{{ data.company }}">{{ data.company }}</a></td>
    </tr>
    <tr>
        <th>Description</a></td>
        <td>{{ data.description }}</td>
    </tr>
    <tr>
        <th>Alternate Names</a></td>
        <td>
            {% for name in data.altNames %}
            <span class="label label-primary">{{ name }}</span><br>
            {% endfor %}
        </td>
    </tr>
    <tr>
        <th>Matches</a></td>
        <td>
            {% for source, values in data.matches %}
            {% for match in values %}
            <span class="label label-primary">{{ source }}</span> <span class="label label-info">{{ match }}</span><br>
            {% endfor %}
            {% endfor %}
        </td>
    </tr>
    <tr>
        <th>Links</a></td>
        <td>
            {% for url, text in data.web %}
            <a href="{{ url }}">{{ text }}</a><br>
            {% endfor %}
        </td>
    </tr>
</tbody>
</table>
{% if matches|length > 0 %}
<table class="table table-striped table-bordered" style="width:100%">
<tbody>
    {% for source, values in matches %}
    {% for matchId, match in values %}
    <tr>
        <th>{{ source }}</th>
        <th>{{ matchId }}</th>
        <td><pre>{{ match }}</pre></td>
    </tr>
    {% endfor %}
    {% endfor %}
</tbody>
</table>
{% endif %}
<script>
$(document).ready(function () {
    $('#datatable').DataTable({
        paging: false
    });
});
</script>
{% endblock %}
