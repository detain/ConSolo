{% extends "shared/emubase.twig" %}

{% block content %}
<table id="datatable" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Platforms</th>
            <th>Links</th>
            <th>Version</th>
            <th>Last Updated</th>
        </tr>
    </thead>
    <tbody>
        {% for data in results %}
        <tr>
            <td><a href="{{ app.request.basePath }}/game/{{ data.id }}">{{ data.name }}</a></td>
            <td>{{ data.description }}</td>
            <td>
                {% for platform in data.platforms %}
                <span class="label label-primary">{{ platform }}</span>
                {% endfor %}
            </td>
            <td>
                {% for url, text in data.links %}
                <a href="{{ url }}">{{ text }}</a>
                {% endfor %}
            </td>
            <td></td>
            <td></td>
        </tr>
        {% endfor %}
    </tbody>
</table>
<script>
$(document).ready(function () {
    $('#datatable').DataTable({
        paging: false
    });
});
</script>
{% endblock %}
