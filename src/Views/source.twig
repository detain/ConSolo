{% extends "shared/emubase.twig" %}

{% block content %}
<table class="table table-striped table-bordered" style="width:100%">
<tbody>
    <tr>
        <th>ID</a></td>
        <td>{{ data.id }}</td>
    </tr>
    <tr>
        <th>Name</a></td>
        <td>{{ data.name }}</td>
    </tr>
    <tr>
        <th>Type</a></td>
        <td>{{ data.type }}</td>
    </tr>
    <tr>
        <th>Provides</a></td>
        <td>
            {% for type in data.provides %}
            <span class="label label-primary">{{ type }}</span><br>
            {% endfor %}
        </td>
    </tr>
    <tr>
        <th>Description</a></td>
        <td>{{ data.description }}</td>
    </tr>
    <tr>
        <th>Updated Last</a></td>
        <td>{{ data.updatedLast }}</td>
    </tr>
    <tr>
        <th>Update Trigger</a></td>
        <td>{{ data.updateTrigger }}</td>
    </tr>
    <tr>
        <th>Links</a></td>
        <td>
            {% for url, text in data.web %}
            <a href="{{ url }}">{{ text }}</a><br>
            {% endfor %}
        </td>
    </tr>
</tbody>
</table>
<script>
$(document).ready(function () {
    $('#datatable').DataTable({
        paging: false
    });
});
</script>
{% endblock %}
